// NOTES:
  // - use implicit relationships unless it's necessary to store metadata
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
    id                String @id @default(cuid())
    name              String?
    email             String? @unique
    emailVerified     DateTime?
    username          String? @unique
    image             String?
}

model Post {
    id        String @default(cuid())
    title     String @unique
    slug      String @id
    content   Json?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    collections BlogCollection[]
}

model BlogCollection {
    id        String  @default(cuid())
    title     String @unique
    slug      String @id
    posts     Post[]
}

model Product {
    id        String @id @default(cuid())
    title     String
    content   Json?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    shopCollection ShopCollection @relation(fields: [shopCollectionId], references: [id])
    shopCollectionId String
}

model ShopCollection {
    id        String   @id @default(cuid())
    title     String
    products  Product[]
}